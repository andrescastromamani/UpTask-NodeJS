doctype html
html(lang="en")
    head
        include partials/head
    body 
        header.bar
            h1 UpTask-Project Administrator
            a(href="/auth/logout") Logout 

        main.content 
            aside.project-container
                .panel.create-project
                    a(href="/new-project" class="button") New Project 
                        span +
                .panel.project-list 
                    h2 Projects 
                    ul#projects.projects
                        if (projects.length)
                            each project in projects 
                                li 
                                    a(href=`/projects/${project.url}`)= project.name  
            block content 
        script(src="/dist/bundle.js") 