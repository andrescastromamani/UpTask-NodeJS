doctype html
html(lang="en")
  head
    include ../partials/head
  body.login
    .form-container 
      h1 Sign in - UpTask
      //pre=vardump(name)
      if error
        .alerts
          .alert.error
            p= error
      form#form.box.login-box(method="POST" action="/auth/login")
        .field
          label(for="email") Email
          input#email(type="email" name="email" placeholder="Email")
        .field
          label(for="password") Password
          input#password(type="password" name="password" placeholder="Password" )
        .field.send
          input#submit(type="submit" value="Login" class="button")
        .field
          a(href="/auth/register") Do you not have an account?
    script(src="/dist/bundle.js")